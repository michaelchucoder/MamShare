<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="main_tabroot">
        <item name="android:layout_height">57dp</item>
        <item name="android:background">@drawable/plane_tabroot_bg</item>
    </style>

    <style name="plane_main_tab_radio">
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textColor">@color/bg_main_tab_text_selector</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/plane_base</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="plane_commitorder_item_title_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/plane_text_black_6</item>
        <item name="android:layout_width">80dp</item>
    </style>
    
    <style name="plane_commitorder_item_edit_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/plane_text_black_3</item>
        <item name="android:textColorHint">@color/plane_text_black_9</item>
    </style>

</resources>