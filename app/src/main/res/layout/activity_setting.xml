<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.babyspace.mamshare.app.activity.SettingActivity">

    <RelativeLayout
        android:id="@+id/layout_setting_title"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/plane_base_blue_text">

        <ImageButton
            android:id="@+id/setting_back"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginRight="30px"
            android:background="#f9f33f" />


        <TextView
            android:id="@+id/setting_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="系统设置"
            android:textSize="40px" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_setting_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_setting_title"
        android:orientation="vertical"
        android:paddingLeft="50px"
        android:paddingRight="50px">

        <TextView
            android:id="@+id/setting_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40px"
            android:text="关于妈妈说"
            android:textSize="40px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/yellow" />

        <TextView
            android:id="@+id/setting_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="40px"
            android:text="反馈"
            android:textSize="40px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/yellow" />

        <TextView
            android:id="@+id/setting_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40px"
            android:text="清楚缓存"
            android:textSize="40px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/yellow" />


        <Button
            android:id="@+id/setting_logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_login"
            android:layout_gravity="center_horizontal"
            android:layout_margin="40px"
            android:text="退出登录" />
    </LinearLayout>


</RelativeLayout>
