<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.babyspace.mamshare.app.fragment.RegisterProfileNameFragment">

    <include
        android:id="@+id/common_title"
        layout="@layout/common_title_layout" />

    <TextView
        android:id="@+id/btn_register_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_title"
        android:layout_margin="30px"
        android:text="给自己起个好听的名字吧" />

    <LinearLayout
        android:id="@+id/ll_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_register_name_txt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:text="昵称: " />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="#ff00ff" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_register_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:background="@drawable/shape_rounded_rectangle_red"
        android:text="下一步"
        android:textSize="40px" />


</RelativeLayout>
