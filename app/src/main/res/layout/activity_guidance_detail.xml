<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/my_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/html5_pb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_below="@id/anchor" />

            <WebView
                android:id="@+id/html5_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/anchor">

            </WebView>


        </LinearLayout>

    </ScrollView>

    <!--
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />
    -->


    <include
        android:id="@+id/common_title"
        layout="@layout/common_title_layout" />


    <LinearLayout
        android:id="@+id/bottom_bar_container"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_gravity="bottom"
        android:background="#FFFFFFFF">

        <RelativeLayout
            android:layout_width="0dp"

            android:gravity="center"
            android:layout_height="match_parent"

            android:layout_weight="1">

            <TextView
                android:id="@+id/bottom_collect"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/collect_star"
                android:gravity="center"
                android:text="12" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"

            android:gravity="center"
            android:layout_height="match_parent"

            android:layout_weight="1">

            <TextView
                android:id="@+id/bottom_like"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/heart_nomal"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="12" />

        </RelativeLayout>

        <!--<TextView
            android:id="@+id/bottom_share"
