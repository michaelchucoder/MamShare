<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/common_title"
        layout="@layout/common_title_layout" />

    <RelativeLayout
        android:id="@+id/rl_reg_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/ripple_material_dark"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/ll_reg_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textSize="30px" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/push"
                android:inputType="phone"
                android:text="请输入手机号"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reg_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_reg_phone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textSize="30px" />

            <EditText
                android:id="@+id/edit_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textSize="30px" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rounded_rectangle"
                android:text="获取验证码"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reg_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_reg_verify"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="30px" />

            <EditText
                android:id="@+id/edit_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="密码由6-16个字符组成"
                android:textSize="30px" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_reg_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_reg_container"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_rounded_rectangle"
        android:text="完成注册"
        android:textSize="40px" />
</RelativeLayout>
