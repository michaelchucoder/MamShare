<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/mContentLabel"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/leftwidth"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="的活动活动的活动活动的活动活动的活动活动" />

    <CheckBox
        android:id="@+id/mRightIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/leftwidth"
        android:layout_marginRight="@dimen/leftwidth"
        android:button="@drawable/icon_plane_select_selector_simply"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false" />

</LinearLayout>