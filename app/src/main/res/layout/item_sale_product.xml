<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal"
    android:paddingBottom="15px"
    android:paddingLeft="15px"
    android:paddingRight="15px">

    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginRight="7px"
        android:layout_weight="1"
        android:background="@drawable/shape_rounded_rectangle"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_sale_list_img"
            android:layout_width="fill_parent"
            android:layout_height="300px"
            android:scaleType="fitXY"
            android:src="@color/plane_red_color" />


        <TextView
            android:id="@+id/tv_sale_goods_name"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_below="@id/iv_sale_list_img"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="5px"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="比利时贝尔芬Belfine圣诞小熊巧克力棒35g*1根"
            android:textColor="#444343"
            android:textSize="20px" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sale_goods_name"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RMB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="¥"
                android:textColor="#FF3366"
                android:textSize="16px" />

            <TextView
                android:id="@+id/tv_sale_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="198.0"
                android:textColor="#FF3366"
                android:textSize="26px" />

            <TextView
                android:id="@+id/tv_sale_marketprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="¥288.0"
                android:textSize="16px" />

            <TextView
                android:id="@+id/tv_sale_zhekou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5px"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0折"
                android:textColor="#FF3366"
                android:textSize="18px" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7px"
        android:layout_weight="1"
        android:background="@drawable/shape_rounded_rectangle"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_sale_list_img2"
            android:layout_width="fill_parent"
            android:layout_height="300px"
            android:scaleType="fitXY"
            android:src="@color/plane_red_color" />

        <TextView
            android:id="@+id/tv_sale_goods_name2"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_below="@id/iv_sale_list_img2"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="5px"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="比利时贝尔芬Belfine圣诞小熊巧克力棒35g*1根"
            android:textColor="#444343"
            android:textSize="20px" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sale_goods_name2"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RMB2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="¥"
                android:textColor="#FF3366"
                android:textSize="16px" />

            <TextView
                android:id="@+id/tv_sale_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="198.0"
                android:textColor="#FF3366"
                android:textSize="26px" />

            <TextView
                android:id="@+id/tv_sale_marketprice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="¥288.0"
                android:textSize="16px" />

            <TextView
                android:id="@+id/tv_sale_zhekou2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5px"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0折"
                android:textColor="#FF3366"
                android:textSize="18px" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>