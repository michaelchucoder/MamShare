<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/back"
            android:layout_width="44px"
            android:layout_height="55px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:background="@drawable/activity_home_btn_search" />

        <LinearLayout
            android:id="@+id/ll_label_search"
            android:layout_width="400px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="32px"
            android:background="@drawable/shape_discover_search_bg">

            <View
                android:layout_width="24px"
                android:layout_height="25px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:background="@drawable/activity_home_btn_search" />

            <TextView
                android:id="@+id/register_name_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="17px"
                android:layout_marginRight="17px"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:hint="给自己起个好听的名字吧"
                android:textColor="#868686"
                android:textSize="24px" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/label_title"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        android:background="#f4f4f5">


        <com.michael.library.widget.custom.GridViewWithHeaderAndFooter
            android:id="@+id/label_gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="#aaaaaa"
            android:clickable="false"
            android:focusable="false"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:padding="10dp"
            android:verticalSpacing="5dp" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/btn_home_back_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="25px"
        android:layout_marginRight="15px"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingTop="30px">

        <ImageView
            android:layout_width="59px"
            android:layout_height="58px"
            android:src="@drawable/back_top" />
    </LinearLayout>

</RelativeLayout>
