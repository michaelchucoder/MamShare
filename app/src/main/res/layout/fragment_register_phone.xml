<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.babyspace.mamshare.app.fragment.RegisterPhoneFragment">


    <include
        android:id="@+id/common_title"
        layout="@layout/common_title_layout" />

    <LinearLayout
        android:id="@+id/ll_reg_phone"
        android:layout_width="500px"
        android:layout_height="50px"
        android:layout_below="@+id/common_title"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="32px"
        android:background="@drawable/shape_discover_search_bg">

        <View
            android:id="@+id/view_left_icon"
            android:layout_width="24px"
            android:layout_height="25px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:background="@drawable/activity_home_btn_search" />

        <EditText
            android:id="@+id/register_phone_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="17px"
            android:layout_marginRight="17px"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:textColor="#868686"
            android:textSize="24px" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_register_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_reg_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:background="@drawable/shape_rounded_rectangle"
        android:text="下一步"
        android:textSize="40px" />


</RelativeLayout>
