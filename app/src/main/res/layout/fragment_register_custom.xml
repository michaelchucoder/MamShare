<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.babyspace.mamshare.app.fragment.RegisterCustomFragment">


    <include
        android:id="@+id/common_title"
        layout="@layout/common_title_layout" />


    <TextView
        android:id="@+id/register_custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70px"

        android:text="茫茫妈海, 妈妈名片是你的个性标识"
        android:textColor="@color/login_hint_color"
        android:textSize="40px" />

    <ImageView
        android:id="@+id/register_custom_avatar"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_below="@id/register_custom_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:background="@color/white"
        android:padding="15px"
        android:scaleType="centerCrop"
        android:src="@drawable/push" />

    <RelativeLayout
        android:id="@+id/register_custom_feature_container"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_custom_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:background="@drawable/shape_white_corners20">

        <RelativeLayout
            android:id="@+id/rel_custom_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px">

            <LinearLayout
                android:id="@+id/ll_custom_feature"
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"


                android:background="@drawable/gray_stroke20"

                android:orientation="horizontal"
                android:paddingLeft="20px">


                <com.michael.library.widget.materialedittext.MaterialEditText
                    android:id="@+id/register_custom_my_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="填入你的专属妈妈"
                    android:textColor="#868686"


                    android:textSize="24px"
                    app:met_hideUnderline="true" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_marginTop="50px"
                android:layout_toRightOf="@+id/ll_custom_feature"

                android:text="妈妈"
                android:layout_marginLeft="10px"

                android:textColor="@color/login_hint_color"
                android:textSize="35px" />

        </RelativeLayout>


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/rel_custom_feature"
            android:layout_marginBottom="80px"
            android:layout_marginLeft="30px"

            android:text="比如你是一位安好为宝宝做各种美食的妈妈，你可以填入“美食”"
            android:textColor="@color/green_mama_bg"
            android:textSize="14px" />


    </RelativeLayout>

    <Button
        android:id="@+id/register_custom_submit"
        style="@style/LoginBtnStyle"
        android:layout_width="400px"
        android:layout_below="@+id/register_custom_feature_container"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="80px"
        android:text="确定" />


</RelativeLayout>
