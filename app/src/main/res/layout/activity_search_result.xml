<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pink_mama_bg">

        <View
            android:id="@+id/back"
            android:layout_width="44px"
            android:layout_height="55px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:background="@drawable/activity_home_btn_search" />

        <RelativeLayout
            android:id="@+id/ll_label_search"
            android:layout_width="400px"
            android:layout_height="50px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="32px"
            android:background="@drawable/shape_discover_search_bg">

            <View
                android:layout_width="24px"
                android:layout_height="25px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:background="@drawable/activity_home_btn_search" />

            <EditText
                android:id="@+id/register_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="17px"
                android:layout_marginRight="17px"
                android:background="#00000000"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:hint="搜攻略或评测(P5)"
                android:textColor="#868686"
                android:textSize="24px" />
            <View
                android:id="@+id/clear_txt"
                android:layout_width="24px"
                android:layout_height="25px"
                android:layout_marginRight="30px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/activity_home_btn_search" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_label_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:text="搜索" />
    </RelativeLayout>


    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/id_indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#445CACEE">

    </com.viewpagerindicator.TabPageIndicator>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>